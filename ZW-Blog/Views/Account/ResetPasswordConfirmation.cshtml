@{
    ViewBag.Title = "Reset Password Confirmation";
}

<header class="intro-header" style="background-image: url('../../img/thumbs up.jpg');">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1 class="text-center thumb">@ViewBag.Title</h1>
                </div>
            </div>
        </div>
    </div>
</header>
<div>
    <p class="text-center">
        Your password has been reset. Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
    </p>
</div>

<style>
    .thumb {
        color: orange;
        -webkit-text-stroke: 3px;
        -webkit-text-stroke-color: grey;
    }
</style>